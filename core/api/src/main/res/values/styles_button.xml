<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryUnelevatedButton"
        parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="cornerRadius">@dimen/radiusCornerDefault</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/selector_button_stroke</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="PrimaryUnelevatedButton.Transparent"
        parent="PrimaryUnelevatedButton">
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_selection_rounded_transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DangerousButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/colorRedRipple</item>
        <item name="cornerRadius">@dimen/radiusCornerDefault</item>
    </style>

    <style name="MaterialButtonIconCircle"
        parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>

        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialButton.Circle
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialButton.Circle"
        parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
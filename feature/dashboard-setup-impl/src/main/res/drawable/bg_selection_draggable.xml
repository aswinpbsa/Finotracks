<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <inset android:insetLeft="@dimen/insetSelectionLeft"
            android:insetTop="@dimen/insetSelectionTop"
            android:insetRight="@dimen/insetSelectionRight"
            android:insetBottom="@dimen/insetSelectionBottom">
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <corners android:bottomLeftRadius="@dimen/radiusSelectionBottomLeft"
                            android:bottomRightRadius="@dimen/radiusSelectionBottomRight"
                            android:topLeftRadius="@dimen/radiusSelectionTopLeft"
                            android:topRightRadius="@dimen/radiusSelectionTopRight" />
                        <solid android:color="?android:colorBackground" />
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <corners android:bottomLeftRadius="@dimen/radiusSelectionBottomLeft"
                            android:bottomRightRadius="@dimen/radiusSelectionBottomRight"
                            android:topLeftRadius="@dimen/radiusSelectionTopLeft"
                            android:topRightRadius="@dimen/radiusSelectionTopRight" />
                        <solid android:color="?colorControlHighlight" />
                    </shape>
                </item>
            </layer-list>
        </inset>
    </item>

    <item>
        <inset android:insetLeft="@dimen/insetSelectionLeft"
            android:insetTop="@dimen/insetSelectionTop"
            android:insetRight="@dimen/insetSelectionRight"
            android:insetBottom="@dimen/insetSelectionBottom">
            <ripple android:color="?colorControlHighlight">
                <item android:id="@android:id/mask"
                    android:gravity="center">
                    <shape android:shape="rectangle">
                        <corners android:bottomLeftRadius="@dimen/radiusSelectionBottomLeft"
                            android:bottomRightRadius="@dimen/radiusSelectionBottomRight"
                            android:topLeftRadius="@dimen/radiusSelectionTopLeft"
                            android:topRightRadius="@dimen/radiusSelectionTopRight" />
                        <solid android:color="@android:color/white" />
                    </shape>
                </item>
            </ripple>
        </inset>
    </item>

</selector>